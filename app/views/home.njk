{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#"
      }]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l">Sustainable Farming Incentive</span>
      <h1 class="govuk-heading-xl">{{serviceName}}</h1>

      {{ govukButton({
        classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
        href: "/application-task-list",
        isStartButton: true,
        text: "Start now"
      }) }}

      <h2 class="govuk-heading-m">Before you start</h2>
      <p class="govuk-body">You'll need to know:</p>
      <ul class="govuk-list govuk-list--bullet">
      <li>Your SBI (Single Business Identifier).</li>
      <li>Your Rural Payments Agency (RPA) account details</li>
      </ul>
      
      <h2 class="govuk-heading-m">Only apply if</h2>
      <ul class="govuk-list govuk-list--bullet">
      <li>You claimed Basic Payment Scheme (BPS) funding in the last 12 months</li>
      <li>Your farm is registered in</li>
      </ul>

    </div>
    <div class="govuk-grid-column-one-third">
      <aside class="app-related-items" role="complementary">
        <h2 class="govuk-heading-m" id="subsection-title">
          Useful links
        </h2>
        <nav role="navigation" aria-labelledby="subsection-title">
          <ul class="govuk-list govuk-!-font-size-16">
            <li>
              <a class="govuk-link" href="https://environment.data.gov.uk/">
                Defra services platform
              </a>
            </li>
            <li>
              <a class="govuk-link" href="https://www.gov.uk/register-land-rural-land-register/who-can-register">
                Rural land register
              </a>
            </li>
          </ul>
        </nav>
      </aside>

    </div>
  </div>
{% endblock %}