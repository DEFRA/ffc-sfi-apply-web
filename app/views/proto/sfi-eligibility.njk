{% extends "_layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/proto/org-details"
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form method="POST" autocomplete="off" novalidate>
      <input type="hidden" name="crumb" value="{{crumb}}"/>

      {# {{ govukWarningText({
        text: "Perform SFI 2022 scheme eligibility check: at least 5ha BPS entitlements.
        User has permission to act on behalf of organisation SHOULD be covered by previous
        check which returned SBI associated with user",
        iconFallbackText: "Warning"
      }) }} #}

      <h1 class="govuk-heading-l">SFI Eligibility Check</h1>

      <div class="govuk-body">
        Old Siti Agri API says <strong>{{ newSitiAPIEligible }}</strong><br />
        New Siti Agri API says <strong>{{ oldSitiAPIEligible }}</strong>
      </div>

      {{ govukButton({
        text: "Continue"
      }) }}
    </form>
  </div>
  <div>
</div>
{% endblock %}
