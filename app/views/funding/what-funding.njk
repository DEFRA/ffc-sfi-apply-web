{% extends '_layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: "/task-list",
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
    <div class="govuk-grid-column-one-half">
      {% include "save/save.njk" %}
    </div>
  </div>
{% endblock %}

{% block content %}
  {% if model.error %}
      {{ govukErrorSummary(model.error) }}
    {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="/what-funding" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        {% if model.items.length > 0 %}
          {{ govukCheckboxes(model) }}
          <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
              <span class="govuk-details__summary-text">
                What grassland is eligible for funding?
              </span>
            </summary>
            <div class="govuk-details__text">
              <p class="govuk-body">Only improved grassland is eligible. This is grassland that is managed to improve agricultural production, including regular reseeding, or adding fertiliser or organic matter.</p> 
              
              <p class="govuk-body">Improved grassland has:</p> 
              <ul class="govuk-list govuk-list--bullet">
                <li>more than 30% of rye grass, other agriculturally sown grasses and white clover</li> 
                <li>a limited range of commonly occurring or sown grasses and wildflowers</li>
              </ul>
                
              <p class="govuk-body">Improved grassland has had at least one of the following done to it:</p>
              <ul class="govuk-list govuk-list--bullet">
                <li>reseeding within the last 15 years</li> 
                <li>regular adding of fertiliser or animal manures and slurries (usually around 100kg of N per hectare)</li>
                <li>boom spraying herbicide to treat weeds</li> 
                <li>maintaining active field drains</li> 
                <li>taking any conserved forage as silage, usually more than once a year</li>
              </ul>
            </div>
          </details>

          {{ govukButton({
            text: "Continue",
            attributes: {
              id: "submit"
            }
          }) }}

        {% else %}
          {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
              {
                text: "No standards found!"
              }
            ]
          }) }}
        {% endif %}
      </form>
    </div>
  </div>
{% endblock %}
