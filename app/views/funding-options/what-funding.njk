{% extends '_layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <a href="{{model.back}}" class="govuk-back-link">Back</a>
    </div>
    <div class="govuk-grid-column-one-half">
      {% include "save/save.njk" %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <form method="POST" action="/funding-options/what-funding" novalidate>
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      {% if model.items.length > 0 %}
        {{ govukRadios(model) }}
        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "submit"
          }
        }) }}

        {{ govukDetails({
          summaryText: "What is a standard?",
          text: "A standard is a set of actions you'll need to carry out on your land."
        }) }}

      {% else %}
        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
              {
                text: "No Standards(s) found!"
              }
            ]
          }) }}
      {% endif %}
    </form>
    </div>
  </div>
{% endblock %}