{% extends '_layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  <a id="back" href="#" onclick="history.back()" class="govuk-back-link">Back</a>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Arable and horticultural soils</span>
      <h1 class="govuk-heading-l">Increased payment actions</h1>
      <form method="POST" action="/funding-options/land-increased-actions" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        {% if model.establishGreenCover%}
          {{ govukInput(model.greenCover) }}
        {% endif %}
        {% if model.convertArableLand %}
          {{ govukInput(model.permanentGrass) }}
        {% endif %}
        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "submit"
          }
        }) }}
      </form>
    </div>
  </div>
{% endblock %}