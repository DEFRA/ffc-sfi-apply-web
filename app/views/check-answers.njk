{% extends '_layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: "/task-list",
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
    <div class="govuk-grid-column-one-half">
      {% include "save/save.njk" %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="/declaration" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>

        <h1 class="govuk-heading-l">
          Check your answers
        </h1>

        <h2 class="govuk-heading-m">
          Organisation details
        </h2>
        
        <dl class="govuk-summary-list govuk-!-margin-bottom-8">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Business 
            </dt>
            <dd class="govuk-summary-list__value">
              <p class="govuk-body">A Farmer</p>
            </dd>
            <dd class="govuk-summary-list__actions">
              
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              SBI Number
            </dt>
            <dd class="govuk-summary-list__value">
              <p class="govuk-body">106534128</p>
            </dd>
            <dd class="govuk-summary-list__actions">
              
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Land management control
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, I will have management control
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="../management-control">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
        </dl>

        <h2 class="govuk-heading-m">
          Funding details
        </h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-8">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Funding options chosen
            </dt>
            <dd class="govuk-summary-list__value">
              Arable and horticultural soil, Improved grassland soil
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="../what-funding">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
        </dl>

        <h2 class="govuk-heading-m">
        Arable and horticultural soil work
        </h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-8">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Test level of organic matter
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, I will do this
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="organic-matter">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Produce a plan to reduce the risks to soil
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, I will do this
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="assess-plan-arable.html">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              70% green cover over winter
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, I will do this
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="winter-cover">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Add organic matter to soil
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, I will do this
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="add-organic-matter">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Land parcels
            </dt>
            <dd class="govuk-summary-list__value">
              12
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="select-arable-parcels">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Total amount of land
            </dt>
            <dd class="govuk-summary-list__value">
              150.73 hectares
            </dd>
            <dd class="govuk-summary-list__actions">
              
            </dd>
          </div>
        </dl>

        <h2 class="govuk-heading-m">
          Additional arable and horticultural soil work
        </h2>        
        <dl class="govuk-summary-list govuk-!-margin-bottom-8">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Diversify the species in any over winter green cover on 20% on the land
            </dt>
            <dd class="govuk-summary-list__value">
              Yes, on some my selected land 
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="multi-species-green-cover">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>


          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Number of multi species green cover parcels
            </dt>
            <dd class="govuk-summary-list__value">
              5
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="select-parcels-green-cover">
                Change<span class="govuk-visually-hidden"> actions</span>
              </a>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Total amount of land
            </dt>
            <dd class="govuk-summary-list__value">
              84.09 hectares
            </dd>
            <dd class="govuk-summary-list__actions">
              
            </dd>
          </div>
        </dl>


        <h2 class="govuk-heading-m">
          Improved grassland soil work
        </h2> 
      <dl class="govuk-summary-list govuk-!-margin-bottom-8">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Test level of organic matter
          </dt>
          <dd class="govuk-summary-list__value">
            Yes, I will do this
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="organic-matter-grassland">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Produce a plan to reduce the risks to soil
          </dt>
          <dd class="govuk-summary-list__value">
            Yes, I will do this
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="assess-plan-grassland">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            No bare ground over winter
          </dt>
          <dd class="govuk-summary-list__value">
            Yes, I will do this
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="winter-cover-grassland">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Land parcels
          </dt>
          <dd class="govuk-summary-list__value">
            12
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="select-grassland-parcels">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Total amount of land
          </dt>
          <dd class="govuk-summary-list__value">
            155.36 hectares
          </dd>
          <dd class="govuk-summary-list__actions">
            
          </dd>
        </div>
      </dl>

      <h2 class="govuk-heading-m">
        Additional improved grassland soil work
      </h2>        
      <dl class="govuk-summary-list govuk-!-margin-bottom-8">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Establish or keep herbal leys on 15% on the land
          </dt>
          <dd class="govuk-summary-list__value">
            Yes, on some my selected land 
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="grassland-intermediate">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>


        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Number of herbal leys parcels
          </dt>
          <dd class="govuk-summary-list__value">
            5
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="select-parcels-intermediate">
              Change<span class="govuk-visually-hidden"> actions</span>
            </a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Total amount of land
          </dt>
          <dd class="govuk-summary-list__value">
            57.99 hectares
          </dd>
          <dd class="govuk-summary-list__actions">
            
          </dd>
        </div>
      </dl>


      {{ govukButton({
        text: "I agree - send my application",
        href: "/declaration",
        attributes: {
          id: "submit"
        }
      }) }}

      </form>
    </div>
  </div>
{% endblock %}
