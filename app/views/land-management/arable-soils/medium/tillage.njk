{% extends "_layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: "/arable-soils/medium/organic-matter",
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
    <div class="govuk-grid-column-one-half">
      {% include "save/save.njk" %}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form method="POST" action="tillage" novalidate>
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      <span class="govuk-caption-l">
        Arable and horticultural soils medium level
      </span>

      {{ govukRadios({
          idPrefix: "tillage",
          name: "tillage",
          fieldset: {
            legend: {
              text: "Can you use shallow, minimum, no tillage or direct drilling on a quarter of your arable land?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "This applies to the total arable land you're using in the scheme"
          },
          items: [
            {
              value: "yes",
              text: "Yes, I can"
            },
            {
              value: "doing",
              text: "I'm already doing this and will keep doing it"
            },
            {
              value: "no",
              text: "No, I cannot do this"
            }
          ]
        }) }}

      {{ govukDetails({
        summaryText: "How do I do this?",
        text: ""
      }) }}

      {{ govukDetails({
        summaryText: "What happens if you cannot achieve a scheme action?",
        text: ""
      }) }}


      {{ govukButton({
        text: "Continue",
        attributes: {
          id: "submit"
        }
      }) }}
    </form>
  </div>
  <div>
</div>
{% endblock %}