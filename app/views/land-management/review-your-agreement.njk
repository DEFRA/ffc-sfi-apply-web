{% extends "_layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: "/check-your-answers",
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
    <div class="govuk-grid-column-one-half">
      {% include "save/save.njk" %}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form method="POST" action="review-your-agreement" novalidate>
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      {% if selectedStandardCode === 'sfi-arable-soil' %}
        <span class="govuk-caption-l">
          Arable and horticultural soils
        </span>
      {% endif %}
      {% if selectedStandardCode === 'sfi-improved-grassland' %}
        <span class="govuk-caption-l">
          Improved grassland soils
        </span>
      {% endif %}
      <h1 class="govuk-heading-l">
        View your proposed agreement
      </h1>

      <p class="govuk-body">
        <a href="#">Print this page</a>
      </p>

      <h2 class="govuk-heading-m">
        Application value
      </h2>

      <p class="govuk-body">
        For your <strong>70 hectares</strong> of land, you’ll get a year.
      </p>

      <h2 class="govuk-heading-m">
        What you need to do
      </h2>

      <h2 class="govuk-heading-m">
        What records to keep
      </h2>

      <ul class="govuk-list govuk-list--bullet">
        <li>Scheme actions – for example, taking photos to show seed planting or adding organic matter</li>
        <li>Dates you carry out the actions</li>
        <li>Soil assessment</li>
        <li>Soil management plan</li>
      </ul>

      <p class="govuk-body">
        <a href="#">Print this page</a>
      </p>

      {{ govukButton({
        text: "Continue",
        attributes: {
          id: "submit"
        }
      }) }}
    </form>
  </div>
  <div>
</div>
{% endblock %}